<% include ./partials/header.ejs %>
  
    <div class="w-full h-screen bg-center bg-cover flex-items-center bg-zinc-600 flex items-center justify-center">
      <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
        <h1 class="text-4xl tracking-tight leading-none">Create New Account.</h1>
        <form action="/register" method="post">
          <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="name"
            placeholder="name">
          <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
            placeholder="username">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email"
            placeholder="email">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact"
            placeholder="contact">
          <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
            placeholder="password">
          <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full"
            type="submit" name="Create account">
          <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing , You agree to
            PostPals terms of service and acknowledge that you have read
            out privacy policy</p>
        </form>
        <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login existing account</a>
      </div>
    </div>
  


